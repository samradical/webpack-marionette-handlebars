/**
 * Sections
 */

body {
  background: var(--color-grey);
  font-feature-settings: "liga" 1, "kern";
  margin: 0;
  padding: 0;
  text-rendering: optimizeLegibility;
  height: 100%;
}

/**
 * Headings
 */
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 0;
  padding: 0;
  line-height: 1;
  font-weight: normal;
  color: var(--color-white);
  text-transform: uppercase;

  .Grid-bgcolor--white &,
  .Cover-bgcolor--white &{
    color: var(--color-text-dark);
  }
}

h1 {
  font-family: var(--ff-proxima-semibold);

  html.no-wide & {
    font-size: 1.8em;
    line-height: 1.3em;
    letter-spacing: 0.08em;
    padding-bottom: 0.37em;
  }

  html.wide & {
    font-size: 2.72em;
    letter-spacing: 0.16em;
    padding-bottom: 0.5em;
  }
}

h2 {
  font-family: var(--ff-proxima-semibold);
  font-size: 2.04em;
  letter-spacing: 0.2em;
}

h3 {
  font-family: var(--ff-proxima-semibold);
  font-size: 1.36em;
  letter-spacing: 0.2em;
  line-height: 1.4;
}

h4 {
  font-family: var(--ff-default);
  font-size: 1.36em;
  letter-spacing: 0.2em;

  html.narrow & {
    font-size: 1em;
  }
}

h5 {
  font-family: var(--ff-proxima-semibold);
  font-size: 1.088em;
  letter-spacing: 0.2em;
  line-height: 1.5;
  padding-bottom: 0.75em; // 1.23em;
}

h6 {
  font-family: var(--ff-proxima-semibold);
  font-size: 0.816em;
  letter-spacing: 0.21em;
  line-height: 1.4;
  font-weight: 600;
}
