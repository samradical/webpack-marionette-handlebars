/**
 * Grouping content
 */

figure {
  margin: 0;
}

hr {
  box-sizing: content-box;
  height: 0;
}

p {
  margin: 0 0 2em 0;
  margin: 0;
  line-height: normal;
}

pre {
  line-height: 1.2;
  overflow-y: hidden;
}

dl,
ul,
ol {
  margin: 0 0 0 0;
  padding: 0;
  ul,
  ol {
    margin-bottom: 0;
  }
}

p {
  font-family: var(--ff-default);
  font-size: .8em;
  color: var(--color-white);
}
